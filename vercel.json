{
  "buildCommand": "cd portfolio && npm ci && npm run build",
  "outputDirectory": "portfolio/dist",
  "installCommand": "cd portfolio && rm -rf node_modules package-lock.json && npm install",
  "devCommand": "cd portfolio && npm run dev",
  "framework": "vite",
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}